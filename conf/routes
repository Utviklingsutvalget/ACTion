# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                            controllers.Application.index()

# Users
GET         /users                       controllers.Users.index()
GET         /users/profile               controllers.Users.profile()
GET         /users/logout                controllers.Users.logout()
# For debuging purposes
GET         /users/delete                controllers.Users.delete(id)

# Google OAuth2 routes
GET         /login                       controllers.OAuth2.login()
GET         /login/authenticate          controllers.OAuth2.authenticate()
GET         /login/oauth2callback        controllers.OAuth2.exchange()

# Clubs
GET         /clubs                       controllers.Clubs.index()
GET         /clubs/:id                   controllers.Clubs.show(id)
POST        /clubs                       controllers.Clubs.update()

#CK Editor
GET         /ckeditor                    controllers.CKEditor.test()
POST        /ckeditor/save               controllers.CKEditor.save()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                controllers.Assets.at(path="/public", file)