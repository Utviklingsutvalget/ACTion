# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                controllers.Application.index()
GET         /privacy                         controllers.Application.privacy()

# Users
GET         /users                           controllers.Users.index()
GET         /users/profile                   controllers.Users.profile()
GET         /users/logout                    controllers.Users.logout()

# For debuging purposes
GET         /users/delete                    controllers.Users.delete(id)

# Google OAuth2 routes
GET         /login                           controllers.OAuth2.login()
GET         /login/authenticate              controllers.OAuth2.authenticate()
GET         /login/oauth2callback            controllers.OAuth2.exchange()

# Google OAuth2 routes
GET         /facebook                        controllers.FacebookApp.authenticate()
GET         /facebook/callbackhandler        controllers.FacebookApp.exchange()

# Clubs
GET         /clubs                           controllers.Clubs.index()
GET         /clubs/:id                       controllers.Clubs.show(id: Long)
POST        /clubs                           controllers.Clubs.update()

# Events
GET         /events                          controllers.Events.index()
GET         /events/new                      controllers.Events.create()
POST        /events/save                     controllers.Events.save()
GET         /events/:id/show                 controllers.Events.show(id: Long)
# For debuging purposes
GET         /events/delete                   controllers.Events.delete(id: Long)

GET         /events                      controllers.Events.index()
GET         /events/:id                  controllers.Events.show(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.at(path="/public", file)
