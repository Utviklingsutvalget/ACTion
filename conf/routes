# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                            controllers.Application.index()

# Users
GET         /users                       controllers.Users.index()
GET         /users/profile               controllers.Users.profile()
GET         /users/logout                controllers.Users.logout()
POST        /users/register              controllers.Registration.submit()
GET         /users/register/terms        controllers.Registration.terms()

# For debuging purposes
GET         /users/delete                controllers.Users.delete(id)

# Google OAuth2 routes
GET         /login                       controllers.OAuth2.login()
GET         /login/authenticate          controllers.OAuth2.authenticate(update:Int ?= 0)
GET         /login/oauth2callback        controllers.OAuth2.exchange()

# Clubs
GET         /clubs                       controllers.Clubs.index()
GET         /clubs/:id                   controllers.Clubs.show(id: Long)
POST        /clubs                       controllers.Clubs.update()
PUT         /clubs/:clubId/:powerupId    controllers.Clubs.updatePowerup(clubId: Long, powerupId: Long)

#CK Editor
GET         /ckeditor                    controllers.CKEditor.test()
POST        /ckeditor/save               controllers.CKEditor.save()

# Events
GET         /events                      controllers.Events.index()
GET         /events/new                  controllers.Events.create()
POST        /events/save                 controllers.Events.save()
GET         /events/:id                  controllers.Events.edit(id:Long)
POST        /events/:id                  controllers.Events.update(id:Long)
GET         /events/:id/show             controllers.Events.show(id: Long)
POST        /events/:id/delete           controllers.Events.delete(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                controllers.Assets.at(path="/public", file)
